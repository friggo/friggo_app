<% provide(:title, @user.email) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @user.email %>
      </h1>
    </section>    
  </aside>
  <div class="span12">
    <h1>
      <center 
        id="start_selling"><%= button_to "Start selling", '/products/new', :method => "get", :class => "btn btn-large btn-primary" %>
      </center>
    </h1>
  </div>
  <div class="span8">
    <% if @user.products.any? %>
      <h3>Products (<%= @user.products.count %>)</h3>
      <ol class="products">
        <%= render @products %>
      </ol>
      <%= will_paginate @products %>
    <% end %>
  </div>
</div>