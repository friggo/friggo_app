<%= form_for @product, :html => { :multipart => true } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <p>
    	<%= f.file_field :photo %>
    </p>
    <p>
    	<%= f.label :name %>
    	<%= f.text_field :name %>
    </p>
    <p>
    	<%= f.label :description %>
    	<%= f.text_field :description %>
    </p>
    <p>
    	<%= f.label :price %>
    	<%= f.text_field :price %>
    </p>
    <p>
    	<%= f.label :quantity_to_sell %>
    	<%= f.text_field :quantity_to_sell %>
    </p>
    <p>
    	<%= f.label :category_id %>
    	<%= f.text_field :category_id %>
    </p>

  </div>
  <%= f.submit "Link Me!", class: "btn btn-large btn-primary" %>
<% end %>